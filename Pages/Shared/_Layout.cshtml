<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
        body {
            background: #f7f9fb;
        }
        .navbar {
            background: linear-gradient(90deg, #0d6efd 0%, #6610f2 100%);
        }
        .navbar-brand, .nav-link, .footer {
            color: #fff !important;
        }
        .card {
            border-radius: 1rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.07);
        }
        .footer {
            background: #222;
            color: #fff;
            padding: 1rem 0;
            margin-top: 2rem;
        }
        /* Boxicons y barra de recursos */
        #resource-bar .btn {
            font-size: 1.1rem;
            padding: 0.5rem 1.2rem;
            border-radius: 2rem;
            transition: background 0.2s, color 0.2s;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        #resource-bar .btn.active, #resource-bar .btn:focus {
            background: #0d6efd;
            color: #fff !important;
            box-shadow: 0 2px 8px rgba(13,110,253,0.08);
        }
        #resource-bar .bx {
            font-size: 1.5rem;
            vertical-align: middle;
        }
        .alert-warning {
            font-size: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg mb-4">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">Princing Calculator  </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Calculadora">Calculadora</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-center">
        <div class="container">
            &copy; 2025 - (C) Pricing Calculator
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>